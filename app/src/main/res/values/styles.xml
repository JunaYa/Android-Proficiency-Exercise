<resources>

    <!-- for bg transparent-->
    <style name="BottomSheetDialogStyle" parent="Theme.Design.BottomSheetDialog">
        <item name="android:colorBackground">@android:color/transparent</item>
    </style>

    <style name="tv_style_mid_black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/mid</item>
        <item name="android:padding">0dp</item>
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="tv_style_min_gray">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/min</item>
        <item name="android:padding">0dp</item>
        <item name="android:textColor">@color/text_gray</item>
    </style>

    <style name="tv_style_mid_white">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/mid</item>
        <item name="android:padding">0dp</item>
        <item name="android:textColor">@color/text_white</item>
    </style>

    <style name="tv_style_min_white">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/min</item>
        <item name="android:padding">0dp</item>
        <item name="android:textColor">@color/text_white</item>
    </style>

    <style name="WebTitle" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/max</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay"
           parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
